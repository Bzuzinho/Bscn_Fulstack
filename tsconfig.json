{
  "include": ["server/**/*", "shared/**/*", "types/**/*"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "drizzle_db_introspect", "shared/schema_legacy.ts", "shared/schema.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
  "module": "nodenext",
  "strict": false,
  "noImplicitAny": false,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
  "moduleResolution": "nodenext",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
      "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@shared/schema": ["./shared/schema_bridge.ts"]
    }
  }
}
