run = "bash -lc 'php artisan serve --host 0.0.0.0 --port 8000 & npm run dev -- --host 0.0.0.0 --port 5173; wait'"

onBoot = """
bash -lc '
  [ -f .env ] || cp .env.example .env || true
  composer install --no-interaction --prefer-dist
  php artisan key:generate || true
  php artisan storage:link || true

  # Se usas Laravel+Vite no /resources:
  [ -f package-lock.json ] && npm ci || npm install
'
"""
modules = ["nodejs-20", "php-8.3"]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel + Vite"

[[workflows.workflow]]
